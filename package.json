{
	"name": "url-shortener",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"test": "turbo run test",
		"check-types": "turbo run check-types",
		"check": "biome check .",
		"check:fix": "biome check . --write",
		"cleanup": "rm -rf node_modules && rm -rf ./**/*/node_modules"
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.4",
		"@tailwindcss/postcss": "4.2.1",
		"autoprefixer": "10.4.27",
		"lefthook": "1.13.6",
		"postcss": "8.5.6",
		"tailwindcss": "4.2.1",
		"turbo": "2.8.12"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.2.13",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
